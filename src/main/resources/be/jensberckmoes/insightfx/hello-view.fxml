<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="be.jensberckmoes.insightfx.controller.MainController">

  <!-- Bovenbalk met knoppen -->
  <top>
    <HBox spacing="10">
      <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>
      <Button text="ðŸ“‚ Load CSV" fx:id="loadButton" onAction="#onLoadCsv"/>
      <Button text="ðŸ“Š Analyseer" fx:id="analyzeButton" onAction="#onAnalyze" disable="true"/>
      <Button text="ðŸ“ˆ Genereer grafiek" fx:id="chartButton" onAction="#onChart" disable="true"/>
      <Button text="ðŸ’¾ Export" fx:id="exportButton" onAction="#onExport" disable="true"/>
      <Label fx:id="statusLabel" text="Klaar" style="-fx-padding: 5 0 0 20;"/>
    </HBox>
  </top>

  <!-- Middelste deel met de tabel -->
  <center>
    <TableView fx:id="tableView">
      <columns>
        <TableColumn text="Datum" fx:id="dateColumn" prefWidth="120"/>
        <TableColumn text="Omschrijving" fx:id="descriptionColumn" prefWidth="300"/>
        <TableColumn text="Bedrag" fx:id="amountColumn" prefWidth="100"/>
        <TableColumn text="Vrije Mededeling" fx:id="commentsColumn" prefWidth="300"/>
      </columns>
    </TableView>
  </center>
</BorderPane>
